<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="580dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="642dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/image_ViewCourse"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@android:drawable/ic_input_add" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="210dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_edit"
            android:background="@color/Editbg"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:layout_marginLeft="250dp"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <ImageView
            android:id="@+id/image_delete"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:layout_marginLeft="250dp"
            app:srcCompat="@android:drawable/ic_menu_delete"
            android:background="@color/deletebg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="330dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_courseIdRetrive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Description"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_courseNameRetrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Category"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_courseFeeRetrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Telephone number"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_courseDurationRetrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Price"
            android:textSize="20dp" />


    </LinearLayout>


</androidx.cardview.widget.CardView>

